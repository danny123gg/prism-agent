{
  "mcpServers": {
    "serpapi": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-serpapi"
      ],
      "env": {
        "SERPAPI_API_KEY": "${SERPAPI_API_KEY}"
      }
    },
    "tavily": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-tavily"
      ],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      }
    }
  }
}
